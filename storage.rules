rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'lotuscaffe5@gmail.com'; // change this
    }

    // Public read (images), admin-only writes
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}


