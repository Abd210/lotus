rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'lotuscaffe5@gmail.com' ||
        request.auth.token.email == 'brands.brothers99@gmail.com'
      );
    }

    // Public can read menu, admin can do everything
    match /categories/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    match /products/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


